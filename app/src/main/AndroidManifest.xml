<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fasteque.androiddatabindingsample" >

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity android:name=".activities.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.SimpleBindingActivity" />
        <activity android:name=".activities.ObservableBindingActivity" />
        <activity android:name=".activities.RecyclerViewBindingActivity" />
        <activity android:name=".activities.CustomFontBindingActivity" />
        <activity android:name=".activities.AttributionsActivity"
                  android:exported="false"
                  android:label="@string/action_attributions"
                  android:theme="@style/AppTheme.ActionBar">
        </activity>
    </application>

</manifest>
